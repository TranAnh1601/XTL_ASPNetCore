    <input asp-for="@Model.FileUpload" />
    <span asp-validation-for="@Model.FileUpload"></span>
    <button class="btn btn-primary" asp-action="UploadPhoto" asp-route-id="@product.ProductID">Upload</button>
</form>

<hr>
